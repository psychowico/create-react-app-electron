{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "23.3.12",
    "@types/node": "10.12.18",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "electron": "^4.0.1",
    "node-sass": "^4.11.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3",
    "typescript": "3.2.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3"
  },
  "scripts": {
    "start": "BROWSER=none NODE_PATH=./src react-scripts start",
    "start-electron": "concurrently --kill-others --kill-others-on-fail \"npm:_watch-dev-electron\" \"npm:_start-dev-electron\"",
    "build": "NODE_PATH=./src react-scripts build",
    "test": "NODE_PATH=./src react-scripts test",
    "check-code": "yarn test && prettier -l",
    "_watch-dev-electron": "tsc src/electron/main.ts src/electron/preload.ts  --outDir build/electron --watch",
    "_start-dev-electron": "nodemon --watch ./build/electron/**/* -C --exec 'electron ./build/electron/main.js'",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "homepage": "./",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
